{
  "name": "resume-dark-blue-emeraud",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:app": "vite",
    "dev:tailwind": "bun tailwindcss -i src/styles/index.css -o ./public/styles/index.css --watch",
    "dev": "concurrently \"bun dev:app\" \"bun dev:tailwind\"",
    "build": "concurrently \"bun build:app\" \"bun build:tailwind\"",
    "build:app": "vite build",
    "build:tailwind": "bun tailwindcss -i src/styles/index.css -o ./public/styles/index.css",
    "preview": "vite preview --port 3001",
    "deploy": "bunx wrangler deploy --minify --keep-vars",
    "jsx:test": "xss-scan"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.11",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.2",
    "tailwindcss": "3.4.17",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.14.9",
    "@alpinejs/focus": "^3.14.9",
    "@iconify-json/ri": "^1.2.5",
    "@iconify/utils": "^2.3.0",
    "@kitajs/html": "^4.2.7",
    "@kitajs/ts-html-plugin": "^4.1.1",
    "alpinejs": "^3.14.9",
    "clsx": "^2.1.1",
    "zod": "^4.3.6"
  }
}